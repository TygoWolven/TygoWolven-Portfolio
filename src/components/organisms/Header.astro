---
// Check the URL to show header variations
const currentPath = Astro.url.pathname;
const homeURL = currentPath === "/";

// Dynamic styling with Astro Props
const { textColor } = Astro.props;
---

<header>
    <ul class={ textColor }>
		<!-- If / Else Statement -->
        {homeURL ? (
            <>
                <li class="white">
                    <p>Status <span>Looking for work</span></p>
                </li>
                <li class="white">
                    <p>Expertise <span>Frontend Design & Development</span></p>
                </li>
                <li class="white">
                    <p>Based in <span>Amsterdam, the Netherlands</span></p>
                </li>
                <li class="white">
                    <a href="#contact" class="button">Contact me</a>
                </li>
            </>
        ) : (
            <>
                <li class="black">
                    <a href="/">
                        <p>Return to <span>Homepage</span></p>
                    </a>
                </li>
                <li class="black">
                    <a href="#contact" class="button">Contact me</a>
                </li>
            </>
        )}
    </ul>
</header>

<style>
    header {
        top: 0;
        width: 100%;
        position: absolute;

        padding: var(--section-width);
        padding-top: 1rem;

        @media (min-width: 842px) {
            padding-top: 2rem;
        }

        ul {
            display: flex;
            align-items: center;
            justify-content: space-between;     
    
            li {
                p {
                    display: flex;
                    flex-direction: column;
    
                    span {
                        opacity: 0.6;
                        color: inherit;
                    }
                }

                &.white {
                    p {
                        color: var(--white);
                    }
        
                    a.button {
                        color: var(--black);
                        background: var(--white);
                    }
                    
                    @media (max-width: 1280px) {
                        &:nth-of-type(3) {
                            display: none;
                        }
                    }

                    @media (max-width: 842px) {
                        &:nth-of-type(2) {
                            display: none;
                        }
                    }
                }

                &.black {
                    p {
                        color: var(--black);
                    }
        
                    a.button {
                        color: var(--white);
                        background: var(--black);
                    }
                }
            }
        }
    }
</style>