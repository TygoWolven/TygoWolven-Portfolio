            <li>
                <a href="#contact">Contact</a>
                <span>05</span>
            </li>
        </ul>
    </nav>
</footer>

<style>
    footer {
        background: var(--black);
        padding: var(--section-width);

        ul {
            li {
                a, span {
                    color: var(--white);
                }
            }

            /* Hover Animation */
            &:has(li:hover) li {
                opacity: 0.1;
            }
    
            &:has(li:hover) li:hover {
                cursor: pointer;
                opacity: 1;
            }
        }

        nav {
            ul.navigation {
                gap: 4rem;
                display: flex;
                flex-direction: column;
    
                li {
                    display: flex;
                    align-items: end;
                    transition: 0.4s ease;
                    justify-content: space-between;
    
                    a {
                        text-box: trim-both cap alphabetic;
                        font-size: clamp(48px, 6vw, 96px);
                    }
                    
                    span {
                        text-box: trim-both cap alphabetic;
                        opacity: 0.6;
                    }
                }
            }
        }
    }
</style>