---
import Cases from "./Cases.astro"
---

<section id="work">
	<h2 class="sticky-heading">Work</h2>
    <Cases 
        freskDigital="show"
        deHallen="show"
        businessNewsRadio="show"
        learningBlog="show"
    />
</section>

<style>
    section#work {
        margin-top: 0;
        
        h2 {
            margin-bottom: 2rem;
        }

        ul {
            gap: 3rem;
            display: grid;
            grid-template-columns: 1fr;
        }

        @media (min-width: 842px) {
            h2 {
                margin-bottom: 4rem;
            }

            ul {
                grid-template-columns: repeat(10, 1fr);
                
                li {
                    &:nth-of-type(1) {
                        grid-column: 5/11;
                        grid-row: 1;

                        .parallax-container {
                            aspect-ratio: 5/6;
                        }
                    }
                    
                    &:nth-of-type(2) {
                        grid-column: 1/5;
                        margin: -33% 0;
                        grid-row: 2;

                        .parallax-container {
                            aspect-ratio: 8/9;
                        }
                    }
                    
                    &:nth-of-type(3) {
                        grid-column: 6/11;
                        grid-row: 3;
                        
                        .parallax-container {
                            aspect-ratio: 12/13;
                        }
                    }
                    
                    &:nth-of-type(4) {
                        grid-column: 1/8;
                        grid-row: 4;

                        .parallax-container {
                            aspect-ratio: 5/4;
                        }
                    }
                }
            }
        }

        @media (min-width: 1024px) {
            ul {
                li {
                    &:nth-of-type(1) {
                        grid-column: 6/11;
                    }
                    
                    &:nth-of-type(2) {
                        grid-column: 1/4;
                    }
                    
                    &:nth-of-type(3) {
                        grid-column: 7/11;
                        margin-bottom: -33%;
                    }

                    &:nth-of-type(4) {
                        grid-column: 1/6;
                    }
                }
            }
        }
    }
</style>