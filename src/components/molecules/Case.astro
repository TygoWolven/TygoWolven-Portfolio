---
// Dynamic Content
const { link, image, logo, title, date } = Astro.props;
---

<li>
	<a href={ link }>
        <div class="image-wrapper">
            <img src={ image } alt="Preview of the case."/>
        </div>
		<div class="content-wrapper">
            <h3>{ title }</h3>
            <p>{ date }</p>
		</div>
	</a>
</li>

<style>
    li {
        width: 100%;

        @media (min-width: 768px) {
            width: calc(50% - 0.5rem);
        }

        a {
            .image-wrapper {
                padding: 1rem;
                aspect-ratio: 1;
                border-radius: 1rem;
                align-content: center;
                
                img {
                    width: 100%;
                    border-radius: 0.5rem;
                }
            }

            .content-wrapper {
                display: flex;
                padding: 1rem 0;
                justify-content: space-between;
                border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    
                h3, p {
                    font-family: "Poppins-SemiBold", Arial, Helvetica, sans-serif;
                }
    
                p {
                    opacity: 0.6;
                }
            }
        }
    }
</style>